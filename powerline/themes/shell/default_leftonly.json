{
  "spaces": 1,
  "outer_padding": 1,
  "segments": {
    "left": [
      {
        "function": "powerline.segments.common.net.hostname",
        "args": {
          "exclude_domain": 1,
          "only_if_ssh": 1
        },
        "priority": 10
      },
      {
        "function": "powerline.segments.common.env.user",
        "args": {
            "hide_user": "igor.astakhov"
        },
        "priority": 30
      },
      {
        "function": "powerline.segments.common.env.cwd",
        "args": {
          "ellipsis": "..",
          "dir_shorten_len": 5,
          "dir_limit_depth": 2,
          "shorten_home": true
        },
        "after": " ",
        "priority": 20
      },
      {
        "function": "powerline.segments.shell.jobnum",
        "priority": 20
      }
    ]
  }
}
